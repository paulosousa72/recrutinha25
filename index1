<body>
    <script>
        // Detecta o navegador
        const userAgent = navigator.userAgent.toLowerCase();
        const isChrome = /chrome|crios/.test(userAgent) && !/edge|opr\//.test(userAgent);
        const isSafari = /safari/.test(userAgent) && !/chrome|crios/.test(userAgent);

        if (!isChrome && !isSafari) {
            alert("Este site suporta apenas Google Chrome ou Safari para uma experiência AR ideal. Por favor, abra no Chrome ou Safari.");
            // Opcional: Redireciona para uma página de instruções ou bloqueia o carregamento
            window.location.href = "https://www.google.com/chrome/";
        }
    </script>
    <h1>
        <img src="logorecrutinha.png">
    </h1>
    <hr>
    <model-viewer
        id="boneco"
        src="RecrutinhaAndroid.glb"
        // ios-src="RecrutinhaIOS.usdz" <!-- Adicione o USDZ para iOS, se disponível -->
        ar
        ar-modes="webxr scene-viewer quick-look"
        ar-placement="floor"
        scale="0.7 0.7 0.7"
        camera-controls
        disable-zoom
        loading="eager">
        <div id="debug" slot="progress-bar" style="display: none;"></div>
    </model-viewer>
    <button onclick="startAR()">VER NO SEU ESPAÇO</button>
    <div id="debug">Carregando...</div>
    <script>
        const modelViewer = document.getElementById('boneco');
        const debugDiv = document.getElementById('debug');

        // Verifica suporte a AR
        modelViewer.addEventListener('load', () => {
            debugDiv.innerText = "Modelo carregado! Clique no botão para AR.";
            console.log("Modelo carregado.");
        });
        modelViewer.addEventListener('error', (event) => {
            debugDiv.innerText = "Erro ao carregar modelo: " + event.detail.message;
            console.log("Erro ao carregar: " + event.detail.message);
        });

        function startAR() {
            debugDiv.innerText = "Iniciando AR...";
            console.log("Tentando iniciar AR...");
            modelViewer.activateAR();
        }
    </script>
</body>
